{
  "name": "teamview",
  "version": "0.1.0",
  "description": "backend service for sharing player & planet infos within teams",
  "keywords": [
    "ogame",
    "online game",
    "2moons"
  ],
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "dev": "NODE_ENV=development nodemon",
    "test": "npm run lint",
    "start": "NODE_ENV=production node index.js",
    "apidoc": "apidoc -i lib/ -o public/api"
  },
  "author": "Andreas Offenhaeuser <https://anoff.io>",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.11.0",
    "axios": "^0.27.2",
    "change-case": "^4.1.2",
    "cron": "^2.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-validator": "^6.14.0",
    "knex": "^2.0.0",
    "pg": "^8.7.3",
    "pino": "^7.11.0",
    "pino-http": "^7.0.0",
    "random-words": "^1.1.2",
    "sqlite3": "^5.0.8"
  },
  "devDependencies": {
    "apidoc": "^0.51.1",
    "html-loader": "^3.1.0",
    "nodemon": "^2.0.16",
    "pino-pretty": "^7.6.1",
    "standard": "^17.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "userscript/",
      "dist/",
      "package.json",
      ".devcontainer/*"
    ],
    "exec": "node index.js | pino-pretty"
  },
  "standard": {
    "ignore": [
      "public/teamview.js"
    ]
  },
  "apidoc": {
    "title": "Teamview API spec",
    "url": "https://teamview.mietemieze.de",
    "version": "0.5.0"
  }
}